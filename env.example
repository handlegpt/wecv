# WeCV AI 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===================
# 数据库配置
# ===================
DB_NAME=wecv_ai
DB_USER=wecv_user
DB_PASS=wecv_password
DB_HOST=localhost
DB_PORT=27017

# ===================
# Auth0 认证配置
# ===================
AUTH0_SECRET=your_auth0_secret_here
AUTH0_BASE_URL=http://localhost:3066
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# ===================
# AWS S3 配置 (可选)
# ===================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_S3_REGION=ap-south-1
AWS_S3_BUCKET_URL=https://your-bucket.s3.ap-south-1.amazonaws.com

# ===================
# Google Analytics (可选)
# ===================
NEXT_PUBLIC_GOOGLE_ANALYTICS=your_ga_id

# ===================
# 其他配置
# ===================
NODE_ENV=development
PORT=5000
NEXT_PUBLIC_BACKEND_API_ENDPOINT=http://localhost:5022/v1
